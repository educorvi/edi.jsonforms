<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="edi.jsonforms"
      metal:use-macro="context/main_template/macros/master">
  <head>
    <link rel="stylesheet" href="++resource++edi.jsonforms/css/vue-json-form.css" />
    <link rel="stylesheet" href="++resource++edi.jsonforms/css/vue-json-form-forms.css" />
  </head>
  <body>
    <metal:block fill-slot="content-core">
      <div class="m-3" tal:define="json context/@@form-element-json-schema; ui context/@@form-element-ui-schema">

        <vue-json-form tal:attributes="json-schema json; ui-schema ui" return-data-as-scopes="false"></vue-json-form>
        <div tal:condition="view/empty_selection_field">
          <p class="bg-warning" style="display: inline; padding: 5px 10px;" i18n:translate="">Please add options to this selection field.</p>
        </div>
        <!-- <h4>JSON-Schema</h4>
        <p tal:content="json" />
        <h4>UI-Schema</h4>
        <p tal:content="ui" /> -->
      </div>
      <script type="text/javascript" src="++resource++edi.jsonforms/js/vue-json-form.umd.js"></script>
      <!-- <script type="text/javascript" src="++resource++edi.jsonforms/js/replace_with_icons.js"></script> -->

    </metal:block>
  </body>
</html>
