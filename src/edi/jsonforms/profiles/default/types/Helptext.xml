<?xml version="1.0"?>
<object xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    name="Helptext"
    meta_type="Dexterity FTI"
    i18n:domain="edi.jsonforms">

  <!-- Basic properties -->
  <property
      i18n:translate=""
      name="title">Helptext</property>
  <property
      i18n:translate=""
      name="description">This helptext can be added between two Fields/Fieldsets and can be used as a helptext for the user to fill out the form.</property>

  <property name="allow_discussion">False</property>
  <property name="factory">Helptext</property>
  <property name="icon_expr">string:puzzle</property>
  <property name="link_target"></property>

  <!-- Hierarchy control -->
  <property name="global_allow">False</property>
  <!-- Schema, class and security -->
  <property name="add_permission">edi.jsonforms.AddHelptext</property>
  <property name="klass">edi.jsonforms.content.helptext.Helptext</property>
  <property name="model_file"></property>
  <property name="model_source"></property>
  <property name="schema">edi.jsonforms.content.helptext.IHelptext</property>

  <!-- Enabled behaviors -->
  <property name="behaviors" purge="false">
    <!-- Details about all standard behaviors following can be read at
         https://docs.plone.org/external/plone.app.dexterity/docs/reference/standard-behaviours.html
    -->
    <!--<element value="plone.basic"/>-->
    <element value="plone.namefromtitle"/>
    <element value="plone.allowdiscussion"/>
    <element value="plone.excludefromnavigation"/>
    <element value="plone.shortname"/>
    <element value="plone.ownership"/>
    <element value="plone.publication"/>
    <element value="plone.categorization"/>
    <!--<element value="plone.locking" />-->
    <!--<element value="plone.leadimage"/>-->
    <!--<element value="plone.relateditems"/>-->
    <!--<element value="plone.richtext"/>-->
    <!--<element value="plone.tableofcontents"/>-->
    <!--<element value="plone.versioning" />-->
    <!--<element value="plone.translatable" />-->
  </property>

  <!-- View information -->
  <property name="add_view_expr">string:${folder_url}/++add++Helptext</property>
  <property name="default_view">form-element-view</property>
  <property name="default_view_fallback">False</property>
  <property name="immediate_view">form-element-view</property>
  <property name="view_methods">
    <element value="form-element-view"/>
  </property>

  <!-- Method aliases -->
  <alias
      from="(Default)"
      to="(dynamic view)"
  />
  <alias
      from="edit"
      to="@@edit"
  />
  <alias
      from="sharing"
      to="@@sharing"
  />
  <alias
      from="view"
      to="(selected layout)"
  />

  <!-- Actions -->
  <action
      action_id="view"
      category="object"
      condition_expr=""
      i18n:attributes="title"
      i18n:domain="plone"
      title="View"
      icon_expr="string:toolbar-action/view"
      url_expr="string:${object_url}"
      visible="True">
    <permission value="View"/>
  </action>
  <action
      action_id="edit"
      category="object"
      condition_expr="not:object/@@plone_lock_info/is_locked_for_current_user|python:True"
      i18n:attributes="title"
      i18n:domain="plone"
      title="Edit"
      icon_expr="string:toolbar-action/edit"
      url_expr="string:${object_url}/edit"
      visible="True">
    <permission value="Modify portal content"/>
  </action>

</object>
